<Window x:Class="ПИ_Лаб_7.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ПИ_Лаб_7"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" MinHeight="460" MinWidth="600" Width="608">
    <Grid Margin="10,10,10,10">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="PlusButton" Content="+" Margin="2,2,2,2" FontSize="44" Click="Button_Click_1"/>
        <Canvas x:Name="MyCanvas" Background="Black" Grid.ColumnSpan="2" Margin="2,2,2,2" Grid.Row="1"/>
        <Button x:Name="MinusButton" Content="-" Margin="2,2,2,2" FontSize="44" HorizontalContentAlignment="Center" Grid.Column="1" Click="Button_Click_2"/>
    </Grid>
</Window>
